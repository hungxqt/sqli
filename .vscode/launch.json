    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Java: Attach to Remote",
      "type": "java",
      "request": "attach",
      "hostName": "localhost",
      "port": 9003,
      "projectName": "java"
    },
    {
      "name": "JS: Attach to Remote",
      "type": "node",
      "request": "attach",
      "port": 9003,
      "restart": true,
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "localRoot": "${workspaceFolder}/js",
      "remoteRoot": "${workspaceFolder}/js"
    },
    {
      "name": "JS: Attach to Docker",
      "type": "node",
      "request": "attach",
      "port": 9002,
      "restart": true,
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "localRoot": "${workspaceFolder}/js",
      "remoteRoot": "/app"
    },
    {
      "name": "JS: Debug Current File",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}/js",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    },
    {
      "name": "PHP: Attach to Docker Container",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "pathMappings": {
        "/var/www": "${workspaceFolder}/php"
      },
      "skipFiles": [
        "**/vendor/**/*.php",
        "**/Symfony/**/*.php",
        "**/Laravel/**/*.php",
        "**/zend/**/*.php"
      ],
      "xdebugSettings": {
        "max_children": 100,
        "max_data": 1024,
        "max_depth": 3
      }
    },
    {
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Django: Attach to Remote",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "127.0.0.1",
        "port": 6000
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/python",
          "remoteRoot": "/app"
        }
      ],
      "django": true,
      "justMyCode": false,
      "logToFile": true
    },
    {
      "name": "Python: Attach to Docker Container",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 6000
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/python",
          "remoteRoot": "/app"
        }
      ],
      "django": true,
      "justMyCode": true,
      "subProcess": true
    }
  ]
}
